class Solution {
    public static int[] rowSum(int mat[][]) {
        int r=mat.length;
        int c=mat[0].length;
        int[] res=new int[r];
       
        for(int i=0;i<r;i++)
        {
             int sum=0;
            for(int j=0;j<c;j++)
            {
                sum+=mat[i][j];
                
            }
            res[i]=sum;
        }
        return res;
    }
}
